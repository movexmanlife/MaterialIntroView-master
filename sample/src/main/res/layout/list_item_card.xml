<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  android:layout_margin="@dimen/activity_horizontal_margin"
  android:id="@+id/item_radio_layout"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="@dimen/item_card_width"
  android:layout_height="@dimen/item_card_height"
  android:foreground="?selectableItemBackground">

  <ImageView
    android:layout_alignParentTop="true"
    android:id="@+id/cover_photo"
    android:layout_width="@dimen/item_card_width"
    android:layout_height="@dimen/item_card_width"
    android:scaleType="centerCrop"/>

  <RelativeLayout
    android:layout_below="@+id/cover_photo"
    android:id="@+id/radio_info_layout"
    android:layout_width="@dimen/item_card_width"
    android:background="@color/colorPrimary"
    android:layout_height="@dimen/item_card_height"
    android:layout_gravity="bottom">

    <RelativeLayout
      android:layout_marginRight="@dimen/activity_horizontal_margin"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:layout_marginTop="@dimen/activity_horizontal_margin"
      android:id="@+id/text_region"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <TextView
        android:textColor="@android:color/white"
        android:id="@+id/cover_name"
        android:layout_width="match_parent"
        android:text="@string/app_name"
        android:layout_height="wrap_content"/>

      <TextView
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:layout_below="@+id/cover_name"
        android:id="@+id/singer_name"
        android:layout_width="match_parent"
        android:text="@string/app_name"
        android:layout_height="wrap_content"/>
    </RelativeLayout>

  </RelativeLayout>

</RelativeLayout>