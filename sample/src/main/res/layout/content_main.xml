<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <LinearLayout
        android:id="@+id/my_card"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_marginTop="100dp"
        android:background="@color/colorAccent"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is header"
                android:textColor="@android:color/white"
                android:textSize="23sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_marginTop="8dp"
                android:text="Lorem Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                android:textColor="@android:color/white"
                android:textSize="15sp"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_card1"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_below="@+id/my_card"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:clickable="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Lorem Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            android:textColor="@android:color/white"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_card2"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_below="@+id/my_card1"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:clickable="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Lorem Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            android:textColor="@android:color/white"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_card3"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_below="@+id/my_card2"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:clickable="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Lorem Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            android:textColor="@android:color/white"
            android:textSize="15sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_reset_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="RESET ALL"/>

</RelativeLayout>
